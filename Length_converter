        <div id="box1">
            <h1 style="color:blue">select units<br/></h1>

            <a href="#"><h1 style="color:aqua; background-color:black; width: 80px">From</h1></a>

                <select name="u1" id="car">
                    <option value="mm">Millimeters</option>
                    <option value="cm">Centimeters</option>
                    <option value="me">Meters</option>
                    <option value="km">Kilometers</option>
                </select>
            
            <a href="#"><h1 style="color:aqua; background-color:black; width: 50px">To</h1></a>

                <select name="u2" id="cars">
                    <option value="mm">Millimeters</option>
                    <option value="cm">Centimeters</option>
                    <option value="me">Meters</option>
                    <option value="km">Kilometers</option>
                </select>

            <input type="number" placeholder="Enter value to convert" id="adj1" style="height:40px;font-size:14pt;"/>
           <div id="start">
                <button onclick="fun()"> 
                    <h1 style="color:lime;  border:5px solid aqua box; background-color:black; padding:5px 5px 5px"> START </h2>
                </button>
