<script>
    function fun()
    {

        var val1=document.getElementById('car').value;
        var val2=document.getElementById('cars').value;
        var length=parseInt(document.getElementById('adj1').value);

        if((isNaN(length)))
        {
            alert('Please Enter Distance');
        }
        else{
            if(val1=='mm')
            {
                if(val2==val1)
                {
                    alert(length+' mm');
                    exit(0);
                }
                else if(val2=='cm')
                {
                    alert(length/10+' cm');
                    exit(0);
                }
                else if(val2=='me')
                {
                    alert(length/1000,+' me');
                    exit(0); 
                }
                else(val2=='km')
                {
                    alert(length/1000000+' km');
                    exit(0);
                }
            }

            if(val1=='cm')
            {
                if(val2=='mm')
                {
                    alert(length*10+' mm');
                    exit(0);
                }
                else if(val2==val1)
                {
                    alert(length,+' cm');
                    exit(0);
                }
                else if(val2=='me')
                {
                    alert(length/100,+' me');
                    exit(0);
                }
                else(val2=='km')
                {
                    alert(length/100000,+' km');
                    exit(0);
                }
            }   

            if(val1=='me')
            {
                if(val2=='mm')
                {
                    alert(length*1000+' mm');
                    exit(0);
                }
                else if(val2=='cm')
                {
                    alert(length*100+ 'cm');
                    exit(0);
                }
                else if(val2==val1)
                {
                    alert(length/1000+' me');
                    exit(0);
                }
                else(val2=='km')
                {
                    alert(length/1000+' km');
                    exit(0);
                }
            }

            if(val1=='km')
            {
                if(val2=='mm')
                {
                    alert(length*1000000,+' mm');
                    exit(0);
                }
                else if(val2=='cm')
                {
                    alert(length*100000+' cm');
                    exit(0);
                }
                else if(val2=='me')
                {
                    alert(length*1000+' me');
                    exit(0);
                }
                else
                {
                    alert(length/1000000+' km');
                    exit(0);
                }
            }
        }
    }
</script>
